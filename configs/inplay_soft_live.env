## InPlay "soft" profile for LIVE (single TP/SL on exchange)
## Use with: set -a; source configs/inplay_soft_live.env; set +a

# Core inplay
INPLAY_EXIT_MODE=fixed
INPLAY_IMPULSE_BODY_MIN_FRAC=0.50
INPLAY_IMPULSE_VOL_MULT=1.3
INPLAY_IMPULSE_VOL_PERIOD=20
INPLAY_REGIME=1
INPLAY_REGIME_MIN_GAP_ATR=0.3
INPLAY_CHOP_ER_MIN=0.35
INPLAY_ALLOW_LONGS=1
INPLAY_ALLOW_SHORTS=0

# Soft fallback
INPLAY_SOFT_ENABLE=1
INPLAY_SOFT_IMPULSE_ATR_MULT=0.75
INPLAY_SOFT_RETEST_ZONE_ATR=0.70
INPLAY_SOFT_RECLAIM_BODY_FRAC=0.10
INPLAY_SOFT_BREAKOUT_BUFFER_ATR=0.05
INPLAY_SOFT_REGIME_MIN_GAP_ATR=0.0
