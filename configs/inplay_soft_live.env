## InPlay "soft" profile for LIVE (single TP/SL on exchange)
## Use with: set -a; source configs/inplay_soft_live.env; set +a

# Core inplay
INPLAY_EXIT_MODE=runner
INPLAY_IMPULSE_BODY_MIN_FRAC=0.50
INPLAY_IMPULSE_VOL_MULT=1.3
INPLAY_IMPULSE_VOL_PERIOD=20
INPLAY_REGIME=1
INPLAY_REGIME_MIN_GAP_ATR=0.3
INPLAY_CHOP_ER_MIN=0.35
INPLAY_ALLOW_LONGS=1
INPLAY_ALLOW_SHORTS=0

# Soft fallback
INPLAY_SOFT_ENABLE=1
INPLAY_SOFT_IMPULSE_ATR_MULT=0.75
INPLAY_SOFT_RETEST_ZONE_ATR=0.70
INPLAY_SOFT_RECLAIM_BODY_FRAC=0.10
INPLAY_SOFT_BREAKOUT_BUFFER_ATR=0.05
INPLAY_SOFT_REGIME_MIN_GAP_ATR=0.0

# Runner exits
INPLAY_PARTIAL_RS=1,2,4
INPLAY_PARTIAL_FRACS=0.50,0.25,0.15
INPLAY_TRAIL_ATR_MULT=2.5
INPLAY_TRAIL_ATR_PERIOD=14
INPLAY_TIME_STOP_BARS=288

# Breakout v2 (retest -> continue)
ENABLE_BREAKOUT_TRADING=1
BREAKOUT_TOP_N=60
BREAKOUT_TRY_EVERY_SEC=30
BREAKOUT_TF_BREAK=240
BREAKOUT_TF_ENTRY=5
BREAKOUT_LOOKBACK_H=72
BREAKOUT_ATR_PERIOD=14
BREAKOUT_IMPULSE_ATR_MULT=1.0
BREAKOUT_IMPULSE_BODY_MIN_FRAC=0.35
BREAKOUT_IMPULSE_VOL_MULT=0.0
BREAKOUT_BUFFER_ATR=0.15
BREAKOUT_SL_ATR=0.60
BREAKOUT_RETEST_TOUCH_ATR=0.40
BREAKOUT_RECLAIM_ATR=0.15
BREAKOUT_MIN_HOLD_BARS=0
BREAKOUT_MAX_RETEST_BARS=36
BREAKOUT_MIN_BREAK_BARS=1
BREAKOUT_MAX_DIST_ATR=1.3
BREAKOUT_RR=1.5
BREAKOUT_ALLOW_LONGS=1
BREAKOUT_ALLOW_SHORTS=0
BREAKOUT_REGIME_MODE=ema
BREAKOUT_REGIME_TF=240
BREAKOUT_REGIME_MIN_GAP_ATR=0.0
